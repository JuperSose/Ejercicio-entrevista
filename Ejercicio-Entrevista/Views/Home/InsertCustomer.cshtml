@model Ejercicio_Entrevista.Models.Customers
@{
    ViewData["Title"] = "Add New Customer";
}
<h1>@ViewData["Title"]</h1>

<hr />
<form asp-action="InsertCustomer" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Customer Name</label>
        <input asp-for="Customer" class="form-control" />
        <span asp-validation-for="Customer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Prefix</label>
        <input asp-for="Prefix" class="form-control" />
        <span asp-validation-for="Prefix" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Building</label>
        <input asp-for="FKBuilding" class="form-control" />
        <span asp-validation-for="FKBuilding" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn bg-primary" />

    </div>
</form>
@{
    if (@TempData["Msg"] != null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}
